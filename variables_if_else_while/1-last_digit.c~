#include <stdlib.h>
#include <time.h>
#include <stdio.h>
/**
*main - function checks random rumber grater than or less than
*
*Return: Always 0.
*/
int main(void)
{
int n;
srand(time(0));
n = rand() - RAND_MAX / 2;
if (n > 5)
printf("%d and is grater than\n", n);
else if (n == 0)
printf("%d and is zero\n", n);
else if (n < 6 && n!= 0)
printf("%d and is less than 6 and not 0\n", n);
return (0);
}
