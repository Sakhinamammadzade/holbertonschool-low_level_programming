#include "main.h"
#include <ctype.h>
/**
*_islower(int c) -function  Shows 1 if the input is a lowercase character. Another cases, shows 0
*
* Return: 1 for lowercase. 0 for the rest.
*/
int _islower(int c)
{
if (c >= 'a' && c <= 'z')
{
_putchar(c);
return (1);
}
else
{
return (0);
_putchar('\n');
}
}
